<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/dashboard/">Dashboard</a></li>
  <li class="breadcrumb-item active">Lists</li>
</ol>

<div class="container-fluid inner-padding">
  <div class="animated fadeIn">
		<div class="row">
		  <div class="col-lg-12">
		    <div class="box padding-bottom-15">
		      <div class="box-header">
		        <div class="headline">
		          <h4> Lists </h4>
		        </div>
		        <div class="box-tools">
		          <div class="input-group input-group-sm">
		            <div class="input-group-btn">
		              <a href="/lists/create" class="btn btn-default create-new hvr-box-shadow-outset"> Create New </a>
		            </div>
		          </div>
		        </div>
		      </div>
		      {{#if lists }}
		      	<div class="box-body table-responsive no-padding">
	            <table class="table table-hover">
	              <tr>
	                <th width="3%">SL.No</th>
	                <th width="20%">Name</th>
	                <th width="17%">Subscribers</th>
	                <th> Action</th>
	              </tr>
	              {{#each lists}}
	                <tr>
	                  <td>1</td>
	                  <td>{{this.name}}</td>
	                  <td></td>
	                  <td>
	                    <a href="/lists/{{this.id}}"> View </a>
	                    <a href="/lists/edit/{{this.id}}"> Edit </a>
	                  </td>
	                </tr>
	              {{/each}}
	            </table>
	          </div>
		      {{/if}}
		    </div>
		  </div>
		</div>
	</div>
</div>